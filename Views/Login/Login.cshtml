@model H_Invoice.Models.user
@{ Layout = null;}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>تسجيل الدخول</title>

    <!-- Google Font: Source Sans Pro
     <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    -->
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">

    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="../../plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="../../plugins/toastr/toastr.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline  " style="border: 3px solid green;">
            <div class="card-header text-center" style=" background-color: #dce8d4 ; ">
                <img src="../../dist/img/AdminLTELogo.png" alt="" class="brand-image img-circle elevation-3 float-left" style="opacity: .8; width: 60px;">

                <a href="../../index2.html" class="h1"><b>H-Invoice</b> </a>       <img src="../../dist/img/logo-Hinvoice.jpg">
            </div>
            <div class="card-body" style=" background-color: #dce8d4 ; ">
                <p class="login-box-msg" style="background-color: #e6cc89; border-radius: 25px ; padding-bottom: 0px; margin-bottom: 10px;">
                    من فضلك اختر اسم المستخدم ثم ادخل كلمة المرور الخاصة بك
                </p>

                <form action="Login" method="post">
                    <div class="input-group mb-3">
                        @Html.DropDownListFor(model => model.User_login, ViewBag.Users as IEnumerable<SelectListItem>, "اسم المستخدم", new { @class = "form-control" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input name="User_Password" type="password" class="form-control" placeholder="كلمة المرور">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <!-- /.col -->
                        <div class="col-12">
                            <button type="submit" class="btn btn btn-block" style="background-color:gainsboro; border-color: grey; ">دخول</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="../../plugins/sweetalert2/sweetalert2.min.js"></script>
    <!-- Toastr -->
    <script src="../../plugins/toastr/toastr.min.js"></script>




        <script>
        $(document).ready(function () {
            
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });

                var toster = "@TempData["toster"]";
                if (toster != null && toster != '')
                {
                    Toast.fire({
                        icon: '@TempData["tosterIcon"]',
                        title: '@TempData["tosterMsg"]'
                    })
                }

            });

    </script>








</body>
</html>




