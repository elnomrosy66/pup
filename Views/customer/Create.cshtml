

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card ">
    <div class="card-header">
        <h3 class="card-title">عميل جديد</h3>
    </div>
    <div class="card-body " style="text-align:right;">
        <form method="post" action="/customer/create" class="form">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">

                        <div class="col-md-3 "><label>الكود</label></div>
                        <div class="col-md-9 "><input type="text" name="GL_code" id="GL_code" class="form-control  " /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 "><label>الاسم</label></div>
                        <div class="col-md-9 "><input required type="text" name="GL_NAME" id="GL_NAME" class="form-control d-inline " /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>كود الدولة</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="country" id="country" class="form-control d-inline " /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>المحافظة</label></div>
                        <div class="col-md-9 d-inline"><input required type="text" name="govm" id="govm" class="form-control d-inline " /></div>


                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>المدينة</label></div>
                        <div class="col-md-9 d-inline"><input required type="text" name="city" id="city" class="form-control d-inline " /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>الشارع</label></div>
                        <div class="col-md-9 d-inline"><input required type="text" name="st" id="st" class="form-control d-inline " /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>رقم المبني</label></div>
                        <div class="col-md-9 d-inline"><input required type="text" name="bkdg_no" id="bkdg_no" class="form-control d-inline " /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label> الهاتف</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="PHONE" id="PHONE" class="form-control d-inline " /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>التواصل</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="CONTACT" id="CONTACT" class="form-control d-inline " /></div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>الفاكس</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="FAX" id="FAX" class="form-control d-inline " /></div>
                    </div>
                </div>

                <div class="col-md-6">


                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>الموبايل</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="mobile" id="mobile" class="form-control d-inline " /></div>

                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>الايميل</label></div>
                        <div class="col-md-9 d-inline"><input type="email" name="email" id="email" class="form-control d-inline " /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>التسجيل الضريبي</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="taxreg" id="taxreg" class="form-control d-inline " /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>الشكل القانوني</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="legal_type" id="legal_type" class="form-control d-inline " /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>رقم السجل التجاري</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="CR" id="CR" class="form-control d-inline " /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>مأمورية الضرائب</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="tax_no3" id="tax_no3" class="form-control d-inline " /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>ملف الضرائب</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="tax_no2" id="tax_no2" class="form-control d-inline " /></div>


                    </div>
                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>ملاحظات</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="rem2" id="rem2" class="form-control d-inline " /></div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-12 d-inline" style="text-align:left; padding-left:40px;">
                            <input type="submit" value="إضافة" class="form-control btn btn-success" />
                        </div>
                    </div>
                </div>


            </div>
        </form>
        
    </div>
    <!-- /.card-body -->
</div>

<div>
    @Html.ActionLink("عودة", "Index")
</div>
