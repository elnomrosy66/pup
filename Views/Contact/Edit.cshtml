@model H_Invoice.Models.CONTACT

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card ">
    <div class="card-header">
        <h3 class="card-title">بيانات الجهة</h3>
    </div>
    <div class="card-body " style="text-align:right;">
        <form method="POST" action="/contact/edit" class="form">
            
            <div class="row">
                <div class="col-md-6">
                    <input hidden type="text" name="CONT" id="CONT" class="form-control" value="@Model.CONT" />

                    <div class="form-group row">

                        <div class="col-md-3 "><label>اسم الجهة</label></div>
                        <div class="col-md-9 "><input type="text" name="NAME" id="NAME" class="form-control" value="@Model.NAME" /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 "><label>كود الدولة</label></div>
                        <div class="col-md-9 "><input required type="text" name="country" id="country" class="form-control d-inline" value="@Model.country" /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>المحافظة</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="government" id="government" class="form-control d-inline" value="@Model.government" /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>المدينة</label></div>
                        <div class="col-md-9 d-inline"><input required type="text" name="city" id="city" class="form-control d-inline" value="@Model.city" /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>الشارع</label></div>
                        <div class="col-md-9 d-inline"><input required type="text" name="street" id="street" class="form-control d-inline " value="@Model.street" /></div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>رقم المبني</label></div>
                        <div class="col-md-9 d-inline"><input required type="text" name="building_no" id="building_no" class="form-control d-inline " value="@Model.building_no" /></div>
                    </div>
                    

                    
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>التسجيل الضريبي</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="tax_id" id="tax_id" class="form-control d-inline " value="@Model.tax_id" /></div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>الشكل القانوني</label></div>
                        <div class="col-md-9 d-inline"><input type="text" name="tax_type" id="tax_type" class="form-control d-inline " value="@Model.tax_type" /></div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3 d-inline"><label>إصدار الفواتير</label></div>
                        @Html.DropDownListFor(model => model.E_inv_cont_type, ViewBag.Cont_Type as IEnumerable<SelectListItem>, "", new { @class = "form-control" ,required = "required"  })
                    </div>

                    <div class="form-group row">
                        <div class="col-lg-12 d-inline" style="text-align:left; padding-left:40px;">
                            <input type="submit" value="حفظ" class="form-control btn btn-success" />
                        </div>
                    </div>

                </div>


            </div>
        </form>

    </div>
    <!-- /.card-body -->
</div>

<div>
    @Html.ActionLink("عودة", "Index")
</div>




